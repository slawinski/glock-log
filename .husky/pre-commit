echo "🚀 Starting Pre-commit Checks..."

echo "📦 Checking TypeScript types..."
npx tsc --noEmit && echo "✅ TypeScript Check [✓]" || (echo "❌ TypeScript Check [✗]" && exit 1)

echo "🧹 Running lint-staged..."
npx lint-staged && echo "✅ Lint-staged Check [✓]" || (echo "❌ Lint-staged Check [✗]" && exit 1)

echo "✅ All checks passed!"
